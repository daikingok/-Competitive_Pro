package abc258;

import java.util.Scanner;

public class C {

	public static void main(String[] args) {
		// TODO 自動生成されたメソッド・スタブ
		Scanner sc = new Scanner(System.in);
		int N = sc.nextInt();
		int Q = sc.nextInt();
		String S = sc.next();
		for(int i = 0; i<Q; i++) {
			int query = sc.nextInt();
			int taisyou = sc.nextInt();

			if(query == 1) {
					S = str_to_rst(S, taisyou);
					System.out.println("S= "+S);
 
			}else if(query == 2) {
				System.out.println(S.charAt(taisyou-1));
			}
		}
	}
	private static String str_to_rst(String s, int i) {
//		String[] str = s.split("");
//		//対象文字
//		String ss = str[s.length()-1];
//		str[s.length()-1] = "";
//		String ans = String.join("", str);
//		s = ss + ans;
//		return s;
		//移動分の文字列を取得
		String moji = s.substring(s.length()-i);
		System.out.println("moji= "+moji);
		s = moji + s.substring(0, i-1);
		return s;
	}

}
